<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="fullLoginForm" prefHeight="523.0" prefWidth="805.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.LoginFormController">

   <!-- Left Panel -->
   <AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #2c3e50;">
      <children>
         <ImageView fitHeight="539.0" fitWidth="400.0" layoutX="0.0" layoutY="0.0" opacity="0.02" preserveRatio="false" style="-fx-opacity: 0.7;">
            <image>
               <Image url="@asset/Gemini_Generated_Image_a8qvk4a8qvk4a8qv.png"/>
            </image>
         </ImageView>
         <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="539.0" prefWidth="400.0" spacing="10">
            <children>
               <Label alignment="TOP_CENTER" prefHeight="417.0" prefWidth="398.0" text="Elite Driving School" textFill="RED">
                  <font>
                     <Font name="System Bold Italic" size="24.0"/>
                  </font>
               </Label>
            </children>
         </VBox>
      </children>
   </AnchorPane>

   <!-- Right Panel - Login Form -->
   <AnchorPane fx:id="loginForm" layoutX="400.0" prefHeight="539.0" prefWidth="390.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
      <children>

         <!-- LOGIN Label -->
         <Label alignment="CENTER" layoutX="150.0" layoutY="100.0" text="LOGIN" textFill="#2c3e50">
            <font>
               <Font name="System Bold" size="36.0"/>
            </font>
         </Label>

         <!-- Username -->
         <VBox layoutX="35.0" layoutY="160.0" prefWidth="330.0" spacing="5">
            <children>
               <Text fill="#34495e" text="User name">
                  <font>
                     <Font name="System Bold" size="16.0"/>
                  </font>
               </Text>
               <TextField fx:id="inputUserName" onAction="#inputUserNameOnAction" prefHeight="40.0" promptText="Enter your username"
                          style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
                  <font>
                     <Font size="14.0"/>
                  </font>
               </TextField>
            </children>
         </VBox>

         <!-- Password -->
         <VBox layoutX="35.0" layoutY="240.0" prefWidth="330.0" spacing="5">
            <children>
               <Text fill="#34495e" text="Password">
                  <font>
                     <Font name="System Bold" size="16.0"/>
                  </font>
               </Text>
               <PasswordField fx:id="inputPassword" onAction="#inputPasswordOnAction" prefHeight="40.0" promptText="Enter your password"
                              style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
                  <font>
                     <Font size="14.0"/>
                  </font>
               </PasswordField>
            </children>
         </VBox>

         <!-- Login Button -->
         <Button fx:id="btnLogin" layoutX="125.0" layoutY="320.0" mnemonicParsing="false" onAction="#loginOnAction"
                 prefHeight="45.0" prefWidth="150.0"
                 style="-fx-background-color: #3498db; -fx-background-radius: 20; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                 text="LOGIN">
            <font>
               <Font name="System Bold" size="20.0"/>
            </font>
         </Button>

         <!-- Info Text -->
         <Text fill="#7f8c8d" layoutX="35.0" layoutY="385.0" text="Keep your login credentials confidential. Do not share your username or password with unauthorized individuals."
               textAlignment="CENTER" wrappingWidth="330.0">
            <font>
               <Font size="11.0"/>
            </font>
         </Text>

         <!-- SignUp Hyperlink -->
         <Hyperlink layoutX="79.0" layoutY="432.0" onAction="#goToSignUpOnAction"
                    text="Don't have an account? Register here." textFill="#3498db" underline="true">
            <font>
               <Font size="14.0"/>
            </font>
         </Hyperlink>

         <!-- Logo -->
         <ImageView fitHeight="70.0" fitWidth="94.0" layoutX="168.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@asset/EDALogoNEW-lpzhgp4nfMbnwvq8QaL-ig%20(1).png"/>
            </image>
         </ImageView>

      </children>
   </AnchorPane>

</AnchorPane>
