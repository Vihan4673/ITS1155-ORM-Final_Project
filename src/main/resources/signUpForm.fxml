<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="signUpForm" prefHeight="532.0" prefWidth="399.0" style="-fx-background-image: BBDCE5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.SignUpFormController">
   <children>
      <TextField fx:id="inputUserName" layoutX="61.0" layoutY="175.0" onAction="#inputUserNameOnAction" prefHeight="32.0" prefWidth="239.0" promptText="User Name" style="-fx-background-radius: 10;" />
      <Label layoutX="139.0" layoutY="34.0" text="Sign Up">
         <font>
            <Font name="DejaVu Serif Condensed Bold" size="35.0" />
         </font>
      </Label>
      <PasswordField fx:id="inputPassword" layoutX="61.0" layoutY="250.0" prefHeight="32.0" prefWidth="239.0" promptText="Password" style="-fx-background-radius: 10;" />
      <Button layoutX="136.0" layoutY="378.0" mnemonicParsing="false" onAction="#signUpBtnOnAction" prefHeight="32.0" prefWidth="127.0" style="-fx-background-color: #3498db; -fx-border-radius: 50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Sign up" textFill="WHITE">
         <font>
            <Font name="DejaVu Serif Condensed Bold" size="15.0" />
         </font></Button>
      <CheckBox fx:id="adminCheckBox" layoutX="85.0" layoutY="330.0" mnemonicParsing="false" onAction="#adminCheckBoxOnAction" text="Admin">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font></CheckBox>
      <CheckBox fx:id="admissionCheckBox" layoutX="163.0" layoutY="330.0" mnemonicParsing="false" onAction="#admissionCheckBoxOnAction" text="Receptionist">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font></CheckBox>
      <ImageView fx:id="backToLoginBtn" fitHeight="20.0" fitWidth="20.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#backToLoginOnAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@asset/icon/icons8-back-50.png" />
         </image>
      </ImageView>
      <Text fill="#053028" layoutX="63.0" layoutY="243.0" text="Password">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <Text fill="#053028" layoutX="58.0" layoutY="168.0" text="User name">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <Text fill="#053028" layoutX="62.0" layoutY="455.0" text="Already have an account?" wrappingWidth="185.0">
         <font>
            <Font size="15.0" />
         </font>
      </Text>
      <Hyperlink fx:id="backToLoginBtn" layoutX="233.0" layoutY="434.0" onAction="#backToLoginOnAction" text="Sign in here">
         <font>
            <Font size="15.0" />
         </font>
      </Hyperlink>

   </children>
</AnchorPane>
