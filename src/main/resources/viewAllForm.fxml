<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ViewAllFormController">

   <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
      </padding>

      <HBox alignment="CENTER_LEFT" style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px; -fx-background-radius: 15;">
         <children>
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@asset/icon/icons8-view-48.png"/>
               </image>
            </ImageView>
            <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="View Students"/>
         </children>
      </HBox>

      <VBox VBox.vgrow="ALWAYS" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-spacing: 25px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Filter by Program:"/>
                  <ChoiceBox fx:id="selectPrgramChoiceBox" prefHeight="35.0" prefWidth="250.0"/>
                  <Region HBox.hgrow="ALWAYS"/>
                  <JFXButton onAction="#refreshTblOnClickAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-background-radius: 8px;" text="ðŸ”„ Refresh" textFill="WHITE">
                     <font>
                        <Font name="DejaVu Serif Bold" size="16.0"/>
                     </font>
                  </JFXButton>
               </children>
            </HBox>

            <TableView fx:id="viewTbl" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colStudentId" prefWidth="95.0" text="Student ID"/>
                  <TableColumn fx:id="colStudentName" prefWidth="131.0" text="Student Name"/>
                  <TableColumn fx:id="colRegisterDate" prefWidth="118.0" text="Register Date"/>
                  <TableColumn fx:id="colInstallment" prefWidth="120.0" text="1st Installment"/>
                  <TableColumn fx:id="colBalance" prefWidth="107.0" text="Balance"/>
                  <TableColumn fx:id="colPayment" prefWidth="76.0" text="Payment"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Total Student Count:"/>
                  <Label fx:id="lblStudentCount" text="0" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </VBox>
</AnchorPane>