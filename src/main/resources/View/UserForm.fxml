<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="settingForm" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f6f9;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.SettingFormController">

   <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="20.0"
         AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>

      <!-- Header -->
      <HBox alignment="CENTER_LEFT"
            style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px; -fx-background-radius: 15;">
         <children>
            <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/icon/cogwheel.png"/>
               </image>
            </ImageView>
            <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                   text="Settings"/>
         </children>
      </HBox>

      <!-- Main Content -->
      <VBox spacing="25.0"
            style="-fx-background-color: white; -fx-background-radius: 20px; -fx-spacing: 25px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
            VBox.vgrow="ALWAYS">

         <!-- Change Password Section -->
         <Label style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #555;" text="Change Password"/>

         <GridPane hgap="30.0" vgap="20.0">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" prefWidth="400.0"/>
               <ColumnConstraints hgrow="SOMETIMES" prefWidth="400.0"/>
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <children>
               <!-- Username -->
               <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <children>
                     <Label style="-fx-font-weight: bold; -fx-min-width: 130px;" text="User Name :"/>
                     <TextField fx:id="txtUserName" HBox.hgrow="ALWAYS"/>
                  </children>
               </HBox>

               <!-- New Password -->
               <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <children>
                     <Label style="-fx-font-weight: bold; -fx-min-width: 130px;" text="New Password :"/>
                     <PasswordField fx:id="txtNewPassword" HBox.hgrow="ALWAYS"/>
                  </children>
               </HBox>
            </children>
         </GridPane>

         <!-- Update Button -->
         <HBox alignment="CENTER_RIGHT">
            <children>
               <JFXButton onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="120.0"
                          style="-fx-background-color: #27ae60; -fx-background-radius: 8px;" text="✏️ Update"
                          textFill="WHITE">
                  <font>
                     <Font name="DejaVu Serif Bold" size="16.0"/>
                  </font>
               </JFXButton>
            </children>
         </HBox>

         <!-- User Table -->
         <Label style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #555;" text="User Details"/>
         <TableView fx:id="tblUser" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="colUserName" prefWidth="199.0" text="User Name"/>
               <TableColumn fx:id="colUserRole" prefWidth="198.0" text="User Role"/>
               <TableColumn fx:id="colDelete" prefWidth="70.0" text="Action"/>
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
         </TableView>

      </VBox>
   </VBox>
</AnchorPane>
