<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="700.0" style="-fx-background-color: #f4f6f9;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.PaymentFormController">

    <VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="700.0" spacing="15.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT"
              style="-fx-padding: 15px 25px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 10px; -fx-background-radius: 10;">
            <children>
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../asset/icon/credit-card.png"/>
                    </image>
                </ImageView>
                <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                       text="Payment Management"/>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="txtSearch" onKeyReleased="#txtSearchKeyReleased"
                                   prefHeight="30.0" prefWidth="200.0" promptText="Search Payment ID"
                                   style="-fx-background-color: #f0f2f5; -fx-background-radius: 6px; -fx-padding: 6px 12px; -fx-font-size: 12px;"/>
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image>
                                <Image url="@asset/icon/search.png"/>
                            </image>
                            <HBox.margin>
                                <Insets left="-30.0"/>
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </HBox>

        <!-- Form -->
        <VBox alignment="CENTER" spacing="20.0"
              style="-fx-background-color: white; -fx-background-radius: 15px; -fx-padding: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
              VBox.vgrow="ALWAYS">
            <children>
                <GridPane alignment="CENTER" hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Payment ID:"/>
                        <TextField fx:id="txtPaymentId" GridPane.columnIndex="1"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Total Fee:" GridPane.columnIndex="2"/>
                        <TextField fx:id="txtTotalFee" editable="false" GridPane.columnIndex="3"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Student:" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cmbStudent" onAction="#cmbStudentOnAction"
                                  prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Amount:" GridPane.columnIndex="2"
                               GridPane.rowIndex="1"/>
                        <TextField fx:id="txtAmount" promptText="Enter amount paid" GridPane.columnIndex="3"
                                   GridPane.rowIndex="1"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Courses:" GridPane.rowIndex="2"/>
                        <ListView fx:id="lstCourses" prefHeight="80.0" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                  GridPane.rowSpan="2"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Remaining:" GridPane.columnIndex="2"
                               GridPane.rowIndex="2"/>
                        <TextField fx:id="txtRemaining" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Payment Status:" GridPane.columnIndex="2"
                               GridPane.rowIndex="3"/>
                        <Label fx:id="lblStatus" style="-fx-font-weight: bold; -fx-font-size: 12px;"
                               GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 12px;" text="Payment Date:" GridPane.rowIndex="4"/>
                        <DatePicker fx:id="dpPaymentDate" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                </GridPane>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <JFXButton fx:id="btnMakePayment" onAction="#btnMakePaymentOnAction" prefHeight="35.0"
                                   prefWidth="130.0" style="-fx-background-color: #27ae60; -fx-background-radius: 8px;"
                                   text="ðŸ’³ Make Payment" textFill="WHITE">
                            <font>
                                <Font name="DejaVu Serif Bold" size="14.0"/>
                            </font>
                        </JFXButton>
                        <JFXButton fx:id="btnCancel" onAction="#btnCancelOnAction" prefHeight="35.0" prefWidth="100.0"
                                   style="-fx-background-color: #c0392b; -fx-background-radius: 8px;"
                                   text="âŒ Cancel" textFill="WHITE">
                            <font>
                                <Font name="DejaVu Serif Bold" size="14.0"/>
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </VBox>
    </VBox>
</AnchorPane>
