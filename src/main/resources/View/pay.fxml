<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="paymentForm" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PayController">

    <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px; -fx-background-radius: 15;">
            <children>
                <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Images/icon/credit-card.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Make a Payment" />
            </children>
        </HBox>

        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
            <children>
                <GridPane alignment="CENTER" hgap="30.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints />
                    </rowConstraints>
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Payment ID:" />
                        <ComboBox fx:id="cmbPaymentId" onAction="#cmbPaymentIdOnAction" prefWidth="300.0" GridPane.columnIndex="1" />

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Student ID:" GridPane.rowIndex="1" />
                        <TextField fx:id="txtStudentId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Course ID:" GridPane.rowIndex="2" />
                        <TextField fx:id="txtCourseId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Total Fee:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtTotalFee" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Amount to Pay:" GridPane.rowIndex="4" />
                        <TextField fx:id="txtAmount" promptText="Enter the amount to pay" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <JFXButton onAction="#btnPayOnAction" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-background-radius: 8px;" text="ðŸ’³ Pay Now" textFill="WHITE">
                            <font>
                                <Font name="DejaVu Serif Bold" size="16.0" />
                            </font>
                        </JFXButton>
                        <JFXButton onAction="#btnClearOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #bdc3c7; -fx-background-radius: 8px;" text="ðŸ§¹ Clear" textFill="#263238">
                            <font>
                                <Font name="DejaVu Serif Bold" size="16.0" />
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </VBox>
    </VBox>
</AnchorPane>
