<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.HomeController">

    <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px; -fx-background-radius: 15;">
            <children>
                <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Images/icon/dashboard.png" />
                    </image>
                </ImageView>
                <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Dashboard" />
            </children>
        </HBox>

        <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-spacing: 25px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER" spacing="25.0">
                    <Pane prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to top right, #3888fd, #17285c); -fx-background-radius: 15;">
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.4)" radius="10" />
                        </effect>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0">
                            <children>
                                <Label text="Total Student" textFill="WHITE">
                                    <font>
                                        <Font name="DejaVu Sans Condensed Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalStudent" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="DejaVu Sans Condensed Bold" size="30.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </Pane>

                    <Pane prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to top right, #3888fd, #17285c); -fx-background-radius: 15;">
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.4)" radius="10" />
                        </effect>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0">
                            <children>
                                <Label text="Total Course" textFill="WHITE">
                                    <font>
                                        <Font name="DejaVu Sans Condensed Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalPrograms" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="DejaVu Sans Condensed Bold" size="30.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </Pane>

                    <Pane prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to top right, #3888fd, #17285c); -fx-background-radius: 15;">
                        <effect>
                            <DropShadow color="rgba(0,0,0,0.4)" radius="10" />
                        </effect>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0">
                            <children>
                                <Label text="Total Instructor" textFill="WHITE">
                                    <font>
                                        <Font name="DejaVu Sans Condensed Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalInstructor" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="DejaVu Sans Condensed Bold" size="30.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </Pane>
                </HBox>

                <HBox prefHeight="354.0" prefWidth="876.0" spacing="30.0" VBox.vgrow="ALWAYS">
                    <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                        <padding>
                            <Insets top="30.0" />
                        </padding>
                        <BarChart fx:id="BarChartStu" HBox.hgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis label="Students" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Count" side="LEFT" />
                            </yAxis>
                        </BarChart>
                    </VBox>

                    <VBox prefWidth="350.0" spacing="10.0">
                        <padding>
                            <Insets top="30.0" />
                        </padding>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Recent Registrations" />
                        <TableView fx:id="tblStudyAll" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="100.0" text="Student ID" />
                                <TableColumn fx:id="colName" prefWidth="150.0" text="Student Name" />
                                <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Monthly Income:" />
                    <Label fx:id="lblIncom" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #2ecc71;" text="LKR 0.00" />
                </HBox>
            </children>
        </VBox>
    </VBox>
</AnchorPane>