<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="678.0" prefWidth="820.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PaymentTableFormController">

    <VBox alignment="TOP_CENTER" prefHeight="678.0" prefWidth="820.0" spacing="20.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>

        <HBox alignment="CENTER_LEFT" style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px; -fx-background-radius: 15;">
            <children>
                <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../asset/icon/payment-method.png"/>
                    </image>
                </ImageView>
                <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                       text="All Payments"/>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="txtSearch" onKeyReleased="#txtSearchKeyReleased" prefHeight="36.0" prefWidth="250.0"
                                   promptText="Search by ID, Student, or Course"
                                   style="-fx-background-color: #f0f2f5; -fx-background-radius: 8px; -fx-padding: 8px 15px; -fx-font-size: 14px;"/>
                        <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true" HBox.hgrow="NEVER">
                            <image>
                                <Image url="@asset/icon/search.png"/>
                            </image>
                            <HBox.margin>
                                <Insets left="-40.0" />
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </HBox>

        <VBox prefHeight="591.0" prefWidth="946.0" VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 20px; -fx-spacing: 25px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
                <TableView fx:id="tblPayments" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPaymentId" prefWidth="100.0" text="Payment ID" />
                        <TableColumn fx:id="colStudent" prefWidth="120.0" text="Student" />
                        <TableColumn fx:id="colProgram" prefWidth="120.0" text="Course" />
                        <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount (LKR)" />
                        <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </VBox>
</AnchorPane>