<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.PaymentTableFormController">

    <children>
        <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1200.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px; -fx-background-radius: 15;">
                <children>
                    <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../asset/icon/payment-method.png" />
                        </image>
                    </ImageView>
                    <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Manage Payments" />

                    <!-- Search Fields -->
                    <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="10.0">
                        <children>
                            <TextField fx:id="txtStuID" prefHeight="36.0" prefWidth="200.0" promptText="Search by Student ID" />
                            <TextField fx:id="txCouID" prefHeight="36.0" prefWidth="200.0" promptText="Search by Course ID" />
                        </children>
                    </HBox>

                </children>
            </HBox>

            <!-- Table -->
            <VBox prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
                <children>
                    <TableView fx:id="tblPayments" editable="true" prefHeight="580.0" prefWidth="1040.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colPaymentId" prefWidth="100.0" text="Payment ID" />
                            <TableColumn fx:id="colStudent" prefWidth="180.0" text="Student Name" />
                            <TableColumn fx:id="colProgram" prefWidth="180.0" text="Course Name" />
                            <TableColumn fx:id="colAmount" prefWidth="120.0" text="Amount Paid" />
                            <TableColumn fx:id="colRemaining" prefWidth="120.0" text="Remaining" />
                            <TableColumn fx:id="colDate" prefWidth="120.0" text="Payment Date" />
                            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                            <TableColumn fx:id="colAction" prefWidth="100.0" text="Action" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
