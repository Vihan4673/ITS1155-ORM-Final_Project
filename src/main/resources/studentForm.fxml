<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="studentForm" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f6f9;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.StudentFormController">

   <children>
      <VBox alignment="CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="20.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 20px 30px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2); -fx-alignment: center-left; -fx-spacing: 15px;">
               <children>
                  <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@asset/icon/graduating-student.png" />
                     </image>
                  </ImageView>
                  <Label style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                         text="Student Management" />
               </children>
            </HBox>

            <!-- Form + Table -->
            <VBox prefHeight="591.0" prefWidth="946.0" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-spacing: 25px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
               <children>
                  <!-- Search -->
                  <HBox alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="868.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txtSearch" onKeyReleased="#txtSearchKeyReleased" prefHeight="36.0" prefWidth="834.0"
                                   promptText="Search by ID or Name"
                                   style="-fx-background-color: #f0f2f5; -fx-background-radius: 8px; -fx-padding: 8px 15px; -fx-font-size: 14px;" />
                        <ImageView fitHeight="24.0" fitWidth="45.0" preserveRatio="true">
                           <image>
                              <Image url="@asset/icons8-magnifying-glass-tilted-right-48.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>

                  <!-- Form Fields -->
                  <GridPane hgap="30.0" vgap="20.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label style="-fx-font-weight: bold; -fx-pref-width: 80px;" text="ID :" />
                              <TextField fx:id="txtId" onAction="#txtIdOnAction" onKeyReleased="#txtIdKeyAction" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <children>
                              <Label style="-fx-font-weight: bold; -fx-pref-width: 80px;" text="Name :" />
                              <TextField fx:id="txtName" onAction="#txtNameOnAction" onKeyReleased="#txtNameKeyAction" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                           <children>
                              <Label style="-fx-font-weight: bold; -fx-pref-width: 80px;" text="Address :" />
                              <TextField fx:id="txtAddress" onAction="#txtAddressOnAction" onKeyReleased="#txtAddressKeyAction" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                              <Label style="-fx-font-weight: bold; -fx-pref-width: 80px;" text="Tel :" />
                              <TextField fx:id="txtTel" onKeyReleased="#txtTelKeyAction" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                           <children>
                              <Label style="-fx-font-weight: bold; -fx-pref-width: 80px;" text="Reg. Date :" />
                              <DatePicker fx:id="registerDatePicker" />
                           </children>
                        </HBox>
                     </children>
                  </GridPane>

                  <!-- Buttons -->
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <JFXButton onAction="#btnSaveOnAction" prefHeight="40.0" prefWidth="110.0"
                                   style="-fx-background-color: #27ae60; -fx-background-radius: 8px;"
                                   text="ðŸ’¾ Save" textFill="WHITE">
                           <font>
                              <Font name="DejaVu Serif Bold" size="16.0" />
                           </font>
                        </JFXButton>
                        <JFXButton onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="110.0"
                                   style="-fx-background-color: #f39c12; -fx-background-radius: 8px;"
                                   text="âœï¸ Update" textFill="#263238">
                           <font>
                              <Font name="DejaVu Serif Bold" size="16.0" />
                           </font>
                        </JFXButton>
                        <JFXButton onAction="#btnClearOnAction" prefHeight="40.0" prefWidth="110.0"
                                   style="-fx-background-color: #bdc3c7; -fx-background-radius: 8px;"
                                   text="ðŸ§¹ Clear" textFill="#263238">
                           <font>
                              <Font name="DejaVu Serif Bold" size="16.0" />
                           </font>
                        </JFXButton>
                        <JFXButton onAction="#btnDeleteOnAction" prefHeight="40.0" prefWidth="110.0"
                                   style="-fx-background-color: #c0392b; -fx-background-radius: 8px;"
                                   text="ðŸ—‘ï¸ Delete" textFill="WHITE">
                           <font>
                              <Font name="DejaVu Serif Bold" size="16.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </HBox>

                  <!-- Table -->
                  <TableView fx:id="tblStudent" onMouseClicked="#tblStudentOnClickAction" prefHeight="300.0" prefWidth="840.0">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="180.0" text="Name" />
                        <TableColumn fx:id="colAddress" prefWidth="250.0" text="Address" />
                        <TableColumn fx:id="colTel" prefWidth="130.0" text="Telephone" />
                        <TableColumn fx:id="colRegisterDate" prefWidth="130.0" text="Register Date" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
